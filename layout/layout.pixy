component Layout(app *aero.Application, content string)
	html
		head
			title= app.Config.Title
		
		body
			nav#navigation
				a.ajax(href="/") Home
				a.ajax(href="/about") About
				a.ajax(href="/gallery") Gallery
				a.ajax(href="/contact") Contact
			main#content.fade!= content
			script(src="/scripts")